{
  "name": "PicksUser",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "scheme": "picksapp",
      "table": "PicksUser"
    }
  },
  "hidden": [
    "isFacebookUser"
  ],
  "properties": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "avatarUrl": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "index": {
        "unique": true
      }
    },
    "password": {
      "type": "string"
    },
    "isFacebookUser": {
      "type": "boolean",
      "default": false
    },
    "facebookId": {
      "type": "number",
      "index": {
        "unique": true
      },
      "postgresql": {
        "dataType": "bigint"
      }
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "currentUser"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "loginFacebook"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "generateToken"
    }
  ],
  "methods": {
    "currentUser": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "required": true,
          "http": {
            "source": "req"
          }
        }
      ],
      "returns": [
        {
          "arg": "picksuser",
          "type": "object",
          "root": true,
          "description": "A PicksUser object representing the current user."
        }
      ],
      "description": "Gets the current user with an authorization token.",
      "http": [
        {
          "path": "/me",
          "verb": "get"
        }
      ]
    },
    "loginFacebook": {
      "accepts": [
        {
          "arg": "oauthToken",
          "type": "string",
          "required": true,
          "description": "The oauth token that is received from redirect url when doing OAuth 2 authentication."
        },
        {
          "arg": "redirectUrl",
          "type": "string",
          "required": true,
          "description": "A url representing the redirect used for getting the oauth token."
        }
      ],
      "returns": [
        {
          "arg": "id",
          "type": "string",
          "root": true,
          "description": "An authorization token used for performing authenticated requests."
        }
      ],
      "description": "Logins a user with a Facebook account.",
      "http": [
        {
          "path": "/login-facebook",
          "verb": "post"
        }
      ]
    },
    "generateToken": {
      "accepts": [
        {
          "arg": "email",
          "type": "string",
          "required": false,
          "description": "email of the user"
        },
        {
          "arg": "password",
          "type": "string",
          "required": false,
          "description": "authorized password of using this endpoint"
        }
      ],
      "returns": [
        {
          "arg": "token",
          "type": "string",
          "root": true,
          "description": "An authorization token used for performing authenticated requests."
        },
        {
          "arg": "message",
          "type": "string",
          "root": true,
          "description": "An error message if there is an error"
        }
      ],
      "description": "Generate a user token.",
      "http": [
        {
          "path": "/generate-token",
          "verb": "post"
        }
      ]
    }
  }
}
