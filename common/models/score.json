{
  "name": "Score",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "scheme": "picksapp",
      "table": "Score"
    }
  },
  "properties": {
    "score": {
      "type": "number",
      "default": 0
    },
    "participant": {
      "type": "number",
      "required": true
    },
    "season": {
      "type": "number",
      "required": true
    }
  },
  "indexes": {
    "season_participant_index": {
      "keys": {"season": 1, "participant": -1},
      "options": {
         "unique": true
       }
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
